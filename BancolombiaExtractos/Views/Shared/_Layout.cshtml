<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Bancolombia</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css">
    <script src="~/lib/bootstrap/js/bootstrap.bundle.js"></script>
</head>

<body>
<header class="mb-4">
    <nav class="bg-black ps-3 pe-3 navbar navbar-expand">
        <div class="container-fluid">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a href="https://www.bancolombia.com/personas" class="nav-link ">Personas</a>
                </li>
                <li class="nav-item">
                    <a href="https://www.bancolombia.com/negocios" class="nav-link ">Negocios</a>
                </li>
                <li class="nav-item">
                    <a href="https://www.bancolombia.com/empresas" class="nav-link ">Corporativos</a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link ">Negocios especializados</a>
                </li>
                <li class="nav-item">
                    <a href="https://www.bancolombia.com/tu360" class="nav-link ">Tu360</a>
                </li>
            </ul>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a href="https://www.bancolombia.com/personas/documentos-legales/transparencia-acceso-informacion" class="nav-link ">Transparencia</a>
                </li>
                <li class="nav-item">
                    <a href="https://www.bancolombia.com/personas/consumidor-financiero" class="nav-link ">Consumidor</a>
                </li>
                <li class="nav-item">
                    <a href="https://www.bancolombia.com/personas/necesidades/documentos" class="nav-link ">Solicita Documentos</a>
                </li>
            </ul>
        </div>
    </nav>
</header>

<div class="container-fluid">
    <main role="main" class="pb-3 ">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container-fluid row">
        <div class="col offset-2">
            <img src="/img/logo_1.png" alt="Logo Bancolombia">
        </div>
        <div class="col-2">&copy; 2023 - Andres Hoyos</div>
    </div>
</footer>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>